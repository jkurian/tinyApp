<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/_head %>
</head>

<body>
    <div id="containerFull">
        <header>
            <% include ./partials/_header %>
        </header>
        <table class="table table-nonfluid">
            <thead class="thead thead-dark">
                <tr>
                    <th>URLs</th>
                    <th>Shortened URLs</th>
                    <th>Edit URL</th>
                    <th>Delete URL</th>
                </tr>
            </thead>
            <tbody>
                <% for(let url in urlList) { %>
                    <tr>
                        <td>
                            <%= urlList[url] %>
                        </td>
                        <td>
                            <%= url %>
                        </td>
                        <td>
                            <a href="/urls/<%= url %>">Edit</a>
                        </td>
                        <td>
                            <div class="popup">
                                <form id="deleteURL" method="POST" action="/urls/<%= url %>/delete">
                                    <button type="submit" form="deleteURL" onClick="deleteURL()">DeleteURL
                                        <i class="icon-trash icon-small"></i>
                                        <span class="popuptext" id="myPopup">Deleting forever...</span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }; %>
            </tbody>
        </table>
        <a href="/urls/new">Shorten a new URL!</a>
    </div>
    <script>
        function deleteURL() {
            console.log("CALLING")
            var popup = document.getElementById("myPopup");
            popup.classList.toggle("show");
        }
    </script>
</body>

</html>